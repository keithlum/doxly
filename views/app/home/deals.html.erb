<!-- Modal -->
<div class="modal fade" id="modal-new-deal" tabindex="-1" role="dialog" aria-labelledby="modal-new-deal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-new-deal-label">New Deal</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="input-deal-title">Deal Title</label>
                        <input type="text" name="deal_title" id="input-deal-title" class="form-control" placeholder="Give your task a title" required="">
                    </div>
                    <div class="form-group">
                        <label for="input-deal-client">Client Name</label>
                        <input type="text" name="deal_client" id="input-deal-client" class="form-control" placeholder="Add your client's name or other identifier" required="">
                    </div>
                    <div class="form-group">
                        <label for="input-deal-date">Projected Close Date</label>
                        <input type="text" name="deal_date" id="input-deal-date" class="form-control" placeholder="MM/DD/YYYY" required="">
                    </div>
                    <div class="form-group">
                        <label for="input-deal-transaction">Transaction Type</label>
                        <select id="input-deal-transaction" class="selectpicker form-control show-tick">
                            <option>Select a Transaction Type</option>
                            <option>Type 1</option>
                            <option>Type 2</option>
                            <option>Type 3</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <label for="input-deal-size">Deal Size</label>
                        <input type="text" name="deal_size" id="input-deal-size" class="form-control" placeholder="$" required="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
