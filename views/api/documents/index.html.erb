<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File size</th>
      <th>File type</th>
      <th>File uploaded at</th>
      <th>Parent type</th>
      <th>Parent</th>
      <th>Created by</th>
      <th>Activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.file_name %></td>
        <td><%= document.file_size %></td>
        <td><%= document.file_type %></td>
        <td><%= document.file_uploaded_at %></td>
        <td><%= document.parent_type %></td>
        <td><%= document.parent_id %></td>
        <td><%= document.created_by %></td>
        <td><%= document.activated %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

